@model PaginableModel<UserModel>
@{
  ViewData["Title"] = "Users";
}
<table class="table table-hover mt-5 mx-auto" style="max-width: 800px">
  <thead>
    <th>Username</th>
    <th>Email</th>
    <th>Phone number</th>
    <th>Actions</th>
  </thead>
  <tbody>
    @foreach (var u in Model.Entities)
    {
      <tr id="@u.Username">
        <td>@u.Username</td>
        <td>@u.Email</td>
        <td>@u.PhoneNumber</td>
        <td>
          <form method="post" asp-action="DeleteUser">
            <input hidden name="id" value="@u.Id" />
            <div class="btn-group">
              <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Urls" asp-route-Username="@u.Username">See all Urls</a>
              <button type="submit" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
            </div>
          </form>
        </td>
      </tr>
    }
  </tbody>
</table>